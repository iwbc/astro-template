{
  "name": "astro-template",
  "type": "module",
  "engines": {
    "node": "~20.17.0"
  },
  "version": "1.0.1",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:astro": "astro dev",
    "dev:indexer": "npm run indexer -- -w",
    "start": "astro dev",
    "build": "npm run indexer && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "run-p lint:*",
    "lint:markup": "markuplint './src/**/*.{html,astro}'",
    "lint:script": "eslint .",
    "lint:style": "stylelint \"./src/**/*.{astro,tsx,scss,css}\"",
    "typecheck": "tsc --noEmit",
    "indexer": "image-indexer -d ./src/assets/images -o ./src/assets/images.ts",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@iwbc/sass-utils": "^0.4.0",
    "astro": "^4.16.16",
    "astro-html-beautifier": "^1.0.4",
    "astro-icon": "^1.1.4",
    "ismobilejs": "^1.1.1",
    "throttle-debounce": "^5.0.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@iwbc/image-indexer": "^0.1.0",
    "@markuplint/astro-parser": "^4.6.13",
    "@markuplint/ml-config": "^4.8.5",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/throttle-debounce": "^5.0.2",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-import-x": "^4.4.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "markuplint": "^4.11.3",
    "npm-run-all": "^4.1.5",
    "postcss-html": "^1.7.0",
    "sass-embedded": "^1.81.0",
    "stylelint": "^16.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-standard-scss": "^14.0.0",
    "typescript-eslint": "^8.16.0"
  }
}
